[Unit]
Description=MQTT docker service
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
Restart=Always
ExecStart=/usr/bin/docker run -p 1883:1883 -p 9001:9001 --name {{ mqtt_container }}  {{ image_name.0.name }} 
ExecStop=/usr/bin/docker stop --ignore {{ mqtt_container }}
ExecStopPost=/usr/bin/docker rm -f {{ mqtt_container }}

[Install]
WantedBy=multi-user.target